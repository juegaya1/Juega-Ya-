        // Base de datos de tutoriales (puedes expandirla con m치s contenido)
        const tutorialsDatabase = [
            {
                title: "CapCut - Editor de Video",
                description: "Aprende a usar CapCut, el editor de video m치s popular y gratuito para crear contenido incre칤ble.",
                link: "https://youtu.be/a5AvOQWGyGg?si=HwsAkkEm8U5",
                tags: ["editor", "video", "capcut", "edici칩n"]
            },
