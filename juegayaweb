                title: "Optimizar Windows para Juegos",
                description: "Ajustes esenciales para mejorar el rendimiento de tu PC en juegos.",
                link: "https://youtube.com/@juegayaone",
                tags: ["optimizaci칩n", "windows", "juegos", "rendimiento"]
            },
            {
                title: "Las Mejores Apps para Productividad",
                description: "Descubre las aplicaciones que te ayudar치n a ser m치s productivo en tu d칤a a d칤a.",
                link: "https://youtube.com/@juegayaone",
                tags: ["apps", "productividad", "software", "utilidades"]
            }
        ];

        // Funci칩n para buscar tutoriales
        function searchTutorials() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const resultsContainer = document.getElementById('searchResults');
            
            if (searchTerm.trim() === '') {
                resultsContainer.innerHTML = '<div class="no-results">Por favor, ingresa un t칠rmino de b칰squeda</div>';
                resultsContainer.style.display = 'block';
                return;
            }
            
            const results = tutorialsDatabase.filter(tutorial => {
                return tutorial.title.toLowerCase().includes(searchTerm) || 
                       tutorial.description.toLowerCase().includes(searchTerm) ||
                       tutorial.tags.some(tag => tag.toLowerCase().includes(searchTerm));
            });
            
            displaySearchResults(results);
        }

        // Funci칩n para mostrar los resultados de b칰squeda
        function displaySearchResults(results) {
            const resultsContainer = document.getElementById('searchResults');
            
            if (results.length === 0) {
                resultsContainer.innerHTML = '<div class="no-results">No se encontraron tutoriales que coincidan con tu b칰squeda</div>';
                resultsContainer.style.display = 'block';
                return;
            }
            
            let html = '<h3>Resultados de b칰squeda:</h3>';
            
            results.forEach(tutorial => {
                html += `
                    <div class="search-result-item">
                        <a href="${tutorial.link}" target="_blank">${tutorial.title}</a>
                        <p>${tutorial.description}</p>
                    </div>
                `;
            });
            
            resultsContainer.innerHTML = html;
            resultsContainer.style.display = 'block';
        }

        // Funci칩n para alternar las preguntas FAQ
        function toggleFAQ(element) {
            const answer = element.nextElementSibling;
            const allAnswers = document.querySelectorAll('.faq-answer');
            const allQuestions = document.querySelectorAll('.faq-question');
            
            // Cerrar todas las respuestas primero
            allAnswers.forEach(ans => {
                if (ans !== answer) {
                    ans.style.display = "none";
                }
            });
            
            // Cambiar el estado de la respuesta clickeada
            if (answer.style.display === "block") {
                answer.style.display = "none";
            } else {
                answer.style.display = "block";
            }
            
            // Actualizar el indicador +/-
            allQuestions.forEach(question => {
                if (question === element) {
                    question.textContent = question.textContent.replace(/[+-]$/, '');
                    question.innerHTML += answer.style.display === "block" ? '-' : '+';
                } else {
                    question.textContent = question.textContent.replace(/[+-]$/, '');
                    question.innerHTML += '+';
                }
            });
        }

        // Event listeners
        document.getElementById('searchButton').addEventListener('click', searchTutorials);
        
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchTutorials();
            }
        });

        // Inicializar FAQ para que el primero est칠 abierto
        document.addEventListener('DOMContentLoaded', function() {
            const firstFAQ = document.querySelector('.faq-question');
            if(firstFAQ) {
                firstFAQ.click();
            }
        });
    </script>
